---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import '../styles/tailwind.css';
const { title } = Astro.props;
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="robots" content="noindex, nofollow" />
		<title>{Astro.props.title}</title>
		<script defer src="https://unpkg.com/tailwindcss-intersect@2.x.x/dist/observer.min.js"></script>
	</head>
	<body
		class="bg-[url('/fun/dobberman_tekst.png')] bg-no-repeat bg-[length:650px_auto] bg-[position:80%_bottom] bg-fixed">

		<header>
			<Header></Header>
		</header>
		
		<main>
			<slot />
		</main>

		<footer>
			<Footer></Footer>
		</footer>
			
		<style>
			/* Fjern standardcursor på summary og hele siden */
			body, summary {
			  cursor: url("/black_star.png") 12 12, auto;
			}
		  
			/* Hover cursor på summary */
			summary:hover {
			  cursor: url("/black_star_hover.png") 12 12, auto;
			  font-style: italic; /* beholder din hover-effekt */
			}
		  
			/* Fjerner browserens default marker/trekant på summary */
			summary::-webkit-details-marker {
			  display: none;
			}
		  </style>
		  
		  

	</body>
</html>


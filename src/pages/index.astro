    <!-- Sektion 5: FUN (uændret) -->
    <details>
      <summary class="text-4xl border-b border-black py-2 hover:italic"
      style="cursor: url('/black_star_hover.png') 12 12, auto;">
        FUN
      </summary>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 py-4">
        <img src="/fun/FOIL.jpg" alt="FOIL" class="w-full h-full object-cover" />
        <video src="/fun/liquid_baggrund.mp4" class="w-full h-full object-cover" autoplay muted loop playsinline></video>
        <img src="/fun/PIERCING.png" alt="PIERCING" class="w-full h-full object-cover" />
        <img src="/fun/PAPIR.jpg" alt="PAPIR" class="w-full h-full object-cover" />
        <img src="/fun/kate_bush.png" alt="Kate Bush" class="w-full h-full object-cover" />
      </div>
    </details>

  </article>
</MainLayout>


<script>
  document.addEventListener("DOMContentLoaded", () => {
    const detailsList = document.querySelectorAll("details");

    detailsList.forEach((details) => {
      details.addEventListener("toggle", () => {
        if (details.open) {
          detailsList.forEach((other) => {
            if (other !== details) other.open = false;
          });
        }
      });
    });
  });
</script>
